{% if not args %}
    {% set args = {
        headingTitle: 'Too much copy supplied',
        headingSubTitle: 'Needs to be 2 lines max',
        info :[
            {
                title : 'Marine Colagen',
                text : 'This fibrous protein is extracted from fish, cod and salmon as they have the
                 best quality! we’ve made sure it only comes from those fish. It has antioxidant properties
                 and is used in skin-care products to prevent or even repair the damage of environmental factors,
                 as well as damage associated with the bodies built in the ageing process. So let’s say you want
                 to stay young well, we wouldnt advise chasing salmon up and down the rivers of Scotland. But we
                 would definitely try to take Vitami Skin Glow every morning and watch the magic happening!',
                imgUrl : 'images/grass.jpg',
                alt : 'grass',
            },
        ]
    } %}
{% endif %}
<section class="s-slider">
    <div class="s-slider__wrap">
        <div class="s-slider__heading">
            <h2 class="s-slider__heading-title">{{ args.headingTitle }}</h2>
            <p class="s-slider__heading-sub">{{ args.headingSubTitle }}</p>
        </div>
        <div class="s-slider__content">
            {% for item in args.info %}
                <div class="s-slider__content-description">
                    <h3 class="s-slider__content-title">{{ item.title }}</h3>
                    <p class="s-slider__content-text">{{ item.text }}</p>
                </div>
                <img src="{{ item.imgUrl }}" alt="{{ item.alt }}" class="s-slider__content-img">
            {% endfor %}
        </div>
        <div class="s-slider__btn-wrap">
            <button class="s-slider__btn is-active"></button>
            <button class="s-slider__btn"></button>
            <button class="s-slider__btn"></button>
        </div>
    </div>
    {% include "../components/button.twig" with {
        content : 'View skin glow',
    } %}
</section>