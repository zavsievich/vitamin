            <div class="s-capabilities-wrap">
                <div class="s-capabilities-img">
                    <svg class="el-icon">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink"
                             xlink:href="#{{ item.icon }}"></use>
                    </svg>
                </div>
                <h2 class="s-capabilities-title">{{ item.title }}</h2>
