<section class="questions">
    <div class="questions__container">
        <h2 class="questions__title">{{ args.questionsTitle }}</h2>
        <h3 class="questions__title-sub">{{ args.questionsTetx }}</h3>
        <ul class="questions__accordion-wrap">
            {% for item in args.accordion %}
                <li class="questions__accordion-section js-accord {{ item.activeClass }}">
                    <div class="questions__accordion-header">
                        <h3 class="questions__accordion-title">
                            <button class="questions__accordion-btn">
                                {{ item.title }}
                                <div class="questions__accordion-icon">
                                    <svg width="22" height="10" viewBox="0 0 22 10" fill="none"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path d="M2 2L11 8L20 2" stroke="url(#paint0_linear)" stroke-width="3.5"
                                              stroke-linecap="round" stroke-linejoin="round"/>
                                        <defs>
                                            <linearGradient id="paint0_linear" x1="-4.41196" y1="5.41289" x2="-0.592001"
                                                            y2="15.2704" gradientUnits="userSpaceOnUse">
                                                <stop stop-color="#D369D6"/>
                                                <stop offset="1" stop-color="#EB0A3C"/>
                                            </linearGradient>
                                        </defs>
                                    </svg>
                                </div>
                            </button>
                        </h3>
                    </div>
                    <div class="questions__accordion-body">
                        <div class="questions__accordion-content el-wysiwyg">
                            <p>{{ item.content }}</p>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>


