<section class="s-product">
    <div class="s-product__content-wrap">
        <div class="s-product__wrap">
            {% include "../components/heading.twig" with {
                title : 'Too much copy supplied',
                subTitle : 'Needs to be 2 lineas max',
            } %}
            <div class="s-product__carousel js-product-carousel">
                {% for item in args.info %}
                    <article class="s-product__slide">
                        <div class="s-product__description">
                            <h3 class="s-product__description-title">{{ item.title }}</h3>
                            <div class="el-wysiwyg">
                                <p>{{ item.text }}</p>
                            </div>
                        </div>
                        <div class="s-product__picture">
                            <div class="s-product__picture-wrap">
                                <img src="{{ item.imgUrl }}" alt="{{ item.alt }}" class="s-product__picture-img">
                            </div>
                        </div>

                    </article>
                {% endfor %}
