{% if not args %}
    {% set args = {
        nav : [
            {
                title : 'Skin glow',
            },
            {
                title : 'FAQs',
            },
            {
                title : 'Blog',
            },
            {
                title : 'Contact',
            },
        ],
        headerLogoAlt : 'Vitami',
        basketTitle : 'Basket',
        headerLogo : 'images/svg_sprite_inline/vitami.svg',
        bannerBackgroundImage : 'images/hero-bg.jpg',
    } %}
{% endif %}
<header class="header">
    <button class="header__btn">
        <svg class="el-icon">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#burger"></use>
        </svg>
        <span class="visually-hidden">burger</span>
    </button>
    <nav class="header__nav">
        <ul class="header__nav-list">
            {% for item in args.nav %}
                <li class="header__nav-title">
                    <a href="#" class="header__nav-title-link">{{ item.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
    <div class="header__logo-wrap">
        <a href="#" class="header__logo"><img class="Ñ-header__logo-img" src="{{ args.headerLogo }}" alt="{{ args.headerLogoAlt }}"></a>
    </div>
    <button class="header__basket">
        <p class="header__basket-title">{{ args.basketTitle }}</p>
        <svg class="el-icon">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#basket"></use>
        </svg>
    </button>
</header>
