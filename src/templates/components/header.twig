{% if not args %}
    {% set args = {
        nav : [
            {
                title : 'Skin glow',
            },
            {
                title : 'FAQs',
            },
            {
                title : 'Blog',
            },
            {
                title : 'Contact',
            },
        ],
        headerLogoDescr : 'Vitami',
        basketTitle : 'Basket',
        headerLogo : 'images/svg_sprite_inline/vitami.svg',
        bannerBackgroundImage : 'images/hero-bg.jpg',
    } %}
{% endif %}
<header class="header">
    <nav class="header-nav">
        <ul class="header-nav__list">
            {% for item in args.nav %}
                <li class="header-nav__title">
                    <a href="#" class="header-nav__title-link">{{ item.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
    <a href="" class="header-logo"><img src="{{ args.headerLogo }}" alt="{{ args.headerLogoDescr }}"></a>
    <button class="header-basket">
        <p class="header-basket__title">{{ args.basketTitle }}</p>
        <svg class="el-icon">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#basket"></use>
        </svg>
    </button>
</header>
<main>
    <section class="banner" style="background-image: url({{ args.bannerBackgroundImage }})">
        <h1 class="banner-title">Uniquely natural supplements
            designed for you, delivered to you.</h1>
    </section>
</main>
